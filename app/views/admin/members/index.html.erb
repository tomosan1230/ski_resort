<div class="mb-5 text-center">
  <h4>会員一覧</h4>
</div>
<table class='table'>
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td>
          <%= link_to admin_member_path(member.id) do %>
            <%= member.nick_name %>
          <% end %>
        </td>
        <td><%= member.email %></td>
        <td>
          <% if member.is_deleted == false %>
            <span class="text-success"><strong>有効</strong></span>
          <% elsif %>
            <span class="text-secondary"><strong>退会済</strong></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @members %>
</div>
