<div class="mb-5 text-center">
  <h4><%= @member.nick_name %>さんの会員情報編集</h4>
</div>

<div class="mb-5 text-center">
<%= form_with model: @member, url: admin_member_path(@member.id), method: :patch do |f| %>
  <div class="row mb-5 justify-content-center">
    <div class="col-md-3 col-form-label">
      <%= f.label :nick_name, "ニックネーム"%>
    </div>
    <div class="col-md-5">
      <%= f.text_field :nick_name, autofocus: true, autocomplete: "email", class: "form-control" %></td>
    </div>
  </div>

  <div class="row mb-5 justify-content-center">
    <div class="col-md-3 col-form-label">
      <%= f.label :email, "Eメール" %>
    </div>
    <div class="col-md-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-5 justify-content-center">
    <div class="col-md-3 col-form-label">
      <%= f.label :is_deleted, "会員ステータス" %>
    </div>
    <div class="col-md-5">
      <%= f.radio_button :is_deleted, 'false' %>
      <%= f.label :is_deleted, '有効' %>
      <%= f.radio_button :is_deleted, 'true' %>
      <%= f.label :is_deleted, '退会' %>
    </div>
  </div>

<%= f.submit "変更を保存", class: "mt-3 btn btn-success px-5" %></td>
<% end %>
</div>