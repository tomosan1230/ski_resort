<div class="row mt-5">
  <div class="col-4 text-center">
    <h4>会員情報編集</h4>
  </div>
</div>
<%= form_with model: @member, url: member_path, method: :patch do |f| %>
<div class="row mt-5">
  <table>
    <tr>
      <td width="200">ニックネーム</td>
      <td><%= f.text_field :nick_name, autofocus: true %></td>
    </tr>
    <tr>
      <td>メールアドレス
      <td><%= f.email_field :email %>
    </tr>
    <tr>
      <td></td>
      <td colspan="2"><%= f.submit "編集内容を保存", class: "mt-3 btn btn-success px-5" %></td>
      <td><%= link_to "退会する", unsubscribe_members_path, class: "mt-3 btn btn-danger px-4" %></td>
    </tr>
  </table>
</div>
<% end %>