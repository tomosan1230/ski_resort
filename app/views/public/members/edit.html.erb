<div>
  <h4>会員情報編集</h4>
</div>

<%= form_with model: @member, url: member_path, method: :patch do |f| %>
<table>
  <tr>
    <td>ニックネーム</td>
    <td><%= f.text_field :nick_name, autofocus: true %></td>
  </tr>
  <tr>
    <td>メールアドレス
    <td><%= f.email_field :email %>
  </tr>
  <tr>
    <td></td>
    <td colspan="2"><%= f.submit "編集内容を保存" %></td>
    <td><%= link_to "退会する", unsubscribe_members_path %></td>
  </tr>
</table>
<% end %>