<header class="border-bottom border-3 bg-header">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <%= video_tag("/videos/logo.mp4", autoplay: :true, muted: :true, width: "90", class: 'video-content') %>
      </a>

      <% if member_signed_in? %>
        <p class="col mb-0">ようこそ<%= current_member.nick_name %>さん</p>
      <% end %>

      <div class="d-flex flex-column mt-2 mb-2">
        <button class="align-self-center navbar-toggler mb-2" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto mb-2">
          <% if member_signed_in? %>
            <li class="text-center mx-2">
              <%= link_to "トップ", root_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "マイページ", member_path(current_member),class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "スキー場", resorts_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <!--<li class="text-center mx-2">-->
            <!--  %= link_to "レビュー", resort_reviews_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>-->
            <!--</li>-->
            <li class="text-center mx-2">
              <%= link_to "ログアウト", destroy_member_session_path,method: :delete,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>

          <% elsif admin_signed_in? %>
            <li class="text-center mx-2">
              <%= link_to "トップ", admin_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "会員一覧", admin_members_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "スキー場", admin_resorts_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "都道府県", admin_prefectures_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "レビュー", admin_reviews_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログアウト", destroy_admin_session_path,method: :delete,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>

          <% else %>
            <li class="text-center mx-2">
              <%= link_to "トップ", root_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "概要",  about_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "新規登録", new_member_registration_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログイン", new_member_session_path,class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
          <% end %>
          </ul>
        </div>

        <div class="d-flex flex-row pt-2 border-top justify-content-center">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :content, placeholder: 'スキー場検索' %>
            <%= button_tag type: "submit", class: 'btn-sm btn-primary' do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </nav>
</header>